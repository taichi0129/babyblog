<div class="users-wrapper">
  <div class="user-wrapper">
    <%= render "side-contents" %>

    <div class="user-contents">
    <%= form_with model: @user, local: true do |f| %>
      <div class="user-info">
        <% if @user.image? %>
          <div class="user-image">
            <%= image_tag(@user.image.to_s) %>
          </div>
        <% else %>
          <%= render "/layouts/default_img" %>
        <% end %>
        <%= f.file_field :image, class: "hidden_field" %>
      </div>
      <table class="user-info">
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name", required: "required", class: "user-edit" %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", required: "required", class: "user-edit" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", required: "required", class: "user-edit" %></td>
        </tr>
      </table>
      <div class="user-update">
        <%= f.submit "登録内容の変更", class: "user-update__btn" %>
      </div>
    <% end %>
    </div>

  </div>
</div>