<div class="devise-wrapper">
  <div class="form-wrapper">
    <h1 class="devise">新規登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-item">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", required: "required", placeholder: "氏名を入力" %>
      </div>

      <div class="form-item">
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", required: "required", placeholder: "ニックネームを入力" %>
      </div>

      <div class="form-item">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "required", placeholder: "メールアドレスを入力" %>
      </div>

      <div class="form-item">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: "required", placeholder: "パスワード:最低６文字" %>
      </div>

      <div class="form-item">
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", required: "required", placeholder: "もう一度パスワードを入力" %>
      </div>

      <div class="button-panel">
        <%= f.submit "登録", class: "devise_btn"%>
      </div>
    <% end %>

    <%# <%= render "devise/shared/links" %>
  </div>
</div>
