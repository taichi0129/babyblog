<div class="wrapper">
  <div class="users-wrapper">
    <%= render "side-contents" %>

    <div class="user-contents">
      <div class="user-image">
        <ul>
          <li>
            <% if @user.image? %>
              <div class="user-image">
                <%= image_tag(@user.image.to_s) %>
              </div>
            <% else %>
              <div class="user-image">
                <%= image_tag "/assets/default.png" %>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="user-info">
      </div>

    </div>
  </div>
</div>